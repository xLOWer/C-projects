#include <iostream>
#include <windows.h>
#include <stdlib.h>
#include <math.h>

//#include "additionals.h"

class SnakeGame 
{
	static const int UP = 0, RIGHT = 1, BOT = 2, LEFT = 3;
	public: static int xMaxSize, yMaxSize;
	
	public: class eat
	{
		public: static int x, y;
		
		public: void NewPos()
		{
			this->x = rand()%SnakeGame.xMaxSize;
			this->y = rand()%SnakeGame.yMaxSize;
			//for()
		}
	};
	
	public: class snake
	{
		public: double speed;
		public: static int size, mem[1024][2];
		
		public: class head
		{
			public: int x, y, direction;
		};
		
		public: class part
		{
			public: int x, y;
		};
		
		public: void move(int dir)
			{
				switch(dir)
				{
					case UP: 	this->head.y--; break;
					case BOT: 	this->y++; break;
					case RIGHT: this->x++; break;
					case LEFT: 	this->x--; break;
					default: break;
				}
				if(this->x == eat.x && this->y == eat.y)
				{
					SnakeGame.snake.size++;
				}
				mem[size][0] = this->x;
				mem[size][1] = this->y;
			}
	};
	
	SnakeGame()//constructor
	{	
		this->snake.size = 0;
		this->snake.speed = 1;
		this->snake.head.direction = rand()%4;
		this->snake.head.x = rand()%xMaxSize;
		this->snake.head.y = rand()%yMaxSize;
		this->eat.NewPos();
	}
	~SnakeGame()//destructor
	{
	}	
};
